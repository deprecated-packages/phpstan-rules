{
    "name": "reveal/phpstan-rules",
    "type": "phpstan-extension",
    "description": "Rules to reveal better patterns in your code",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "phpstan/phpstan": "^1.5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5|^9.5"
    },
    "autoload": {
        "psr-4": {
            "Reveal\\PHPStanRules\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reveal\\PHPStanRules\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.2-dev"
        },
        "phpstan": {
            "includes": [
                "config/rules.neon"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
